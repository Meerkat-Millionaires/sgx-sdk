{
  "name": "basic-example",
  "scripts": {
    "pid": "solana-keygen pubkey target/deploy/basic_example-keypair.json",
    "docker:build": "DOCKER_BUILDKIT=1 docker build -f ../../docker/Dockerfile.service -t basic-example --build-arg CARGO_NAME=basic-sgx-function ./sgx-function",
    "measurement": "pnpm run docker:build; id=$(docker run -it -d --rm basic-example bash); docker cp $id:/measurement.txt sgx-function/measurement.txt; docker kill $id; echo \"MR_ENCLAVE: $(cat sgx-function/measurement.txt)\"",
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.27.0",
    "@switchboard-xyz/common": "^2.1.33",
    "@switchboard-xyz/sgx": "workspace:^"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "ts-mocha": "^10.0.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "typescript": "^4.3.5",
    "prettier": "^2.6.2"
  }
}
